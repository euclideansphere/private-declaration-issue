{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": [
			"es2018"
		],
		"module": "commonjs",
		"target": "ES6",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "./",
		"outDir": "dist"
	},
	"exlclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"./**/*",
		"./**/*.json"
	]
}

